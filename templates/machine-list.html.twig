{% extends 'base.html.twig' %}

{% block title %}Liste des Véhicules{% endblock %}

	{% block body %}
	<h3><center>Liste des Véhicules</center></h3>
	
<div class="row">
    <div class="col s9"></div>
    <div class="col s8">
		<table>
			<thread>
				<th>ID</th>
				<th>Libellé</th>
				<th>Plaque</th>
				<th></th>
			</thread>
			<tbody>
				{% for machine in machines %}
				<tr>
					<td>{{ machine.id}}</td>
					<td>{{ machine.label}} </td>
					<td>{{ machine.serial}}</td>
					<td>
					<a href="{{ path('modify_machine', {'id': machine.id}) }}">
						<button type="button" class="btn btn-success"> 
							<i class="bi bi-pencil-square"></i>
							
						</button>
					</a>
					<a href="{{ path ('remove_machine', {'id' : machine.id})}}">
						<button type="button" class="btn btn-danger"> 
							<i class="bi bi-trash" onclick="return confirm (' Confirmer ? ')"> </i>
						</button>
					</a>
					</td>		
				</tr>
				{% endfor %}

			</tbody>
		</table>
		<a href="{{ path('new_machine')}}">
		<button type="button" class="btn btn-success"> 
		<i class="bi bi-plus-circle-dotted"> Nouveau Véhicule </i>
		</button>
		</a>
		
		</div>
    <div class="col s2"></div>
	</div>
	{% endblock %}