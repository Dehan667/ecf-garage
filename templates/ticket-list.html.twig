{% extends 'base.html.twig' %}

{% block title %} Liste des Interventions {% endblock %}

	{% block body %}
	<h3 class"text-center"> Liste des Interventions </h3>
	
	
	<div class="row">
		<div class="col s2"></div>
		<div class="col s8">
		<table>
			<thread>
				<th>ID</th>
				<th>Responsable</th>
				<th>Numero Ticket</th>
				<th>Description</th>
				<th></th>
			</thread>
			<tbody>

				{% for ticket in ticket %}
				<tr>
					<td>{{ ticket.id}}</td>
					<td>{{ticket.user.nom}}</td>
					<td>{{ ticket.numticket}}</td>
					<td>{{ ticket.description}}</td> 
					<td>
					<td>
                        <td>
                        <a href="{{ path ('remove_ticket', {'id' : ticket.id})}}" onclick="return confirm (' Confirmer ? ')">
                        <button type="button" class="btn btn-danger"> 
							<i class="bi bi-trash"> </i>
						</button>
                        </a>

                        <a href="{{ path ('modify_ticket', {'id': ticket.id})}}">
						<button type="button" class="btn btn-success"> 
							<i class="bi bi-pencil-square"></i>
						</button>
                        </a>
                        </td>
				</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('new_ticket') }}">
		<button type="button" class="btn btn-success"> 
		<i class="bi bi-plus-circle-dotted"> Demander une intervention </i>
		</button> </a>
		</div>

    	<div class="col s2"></div>
	{% endblock %}